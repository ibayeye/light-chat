<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <ImageView
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_baseline_arrow_back_ios_24" />

    <ImageView
        android:id="@+id/logo2"
        android:layout_width="wrap_content"
        android:layout_height="108dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:src="@drawable/logo_lightchat" />

    <LinearLayout
        android:id="@+id/ly_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo2"
        android:orientation="vertical"
        android:padding="30dp">

        <EditText
            android:id="@+id/NamaLengkap"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/button_shape"
            android:backgroundTint="@color/abuabu"
            android:fontFamily="@font/inter"
            android:hint="Masukkan Nama Lengkap"
            android:paddingLeft="10dp"
            android:textSize="15sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/Email"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_shape"
            android:backgroundTint="@color/abuabu"
            android:fontFamily="@font/inter"
            android:hint="Masukkan Email"
            android:paddingLeft="10dp"
            android:textSize="15sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/KataSandi"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_shape"
            android:backgroundTint="@color/abuabu"
            android:fontFamily="@font/inter"
            android:hint="Masukkan Kata Sandi"
            android:inputType="textPassword"
            android:paddingLeft="10dp"
            android:textSize="15sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/KonfirmasiKataSandi"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_shape"
            android:backgroundTint="@color/abuabu"
            android:fontFamily="@font/inter"
            android:hint="Konfirmasi Kata Sandi"
            android:inputType="textPassword"
            android:paddingLeft="10dp"
            android:textSize="15sp"
            android:textStyle="bold" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_buatakun"
        android:layout_width="330dp"
        android:layout_height="40dp"
        android:layout_below="@id/ly_1"
        android:layout_centerHorizontal="true"
        android:width="311dp"
        android:background="@drawable/button_shape"
        android:text="Buat Akun"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/ly_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_buatakun"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter"
            android:text="sudah punya akun?"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/txt_masuk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter"
            android:text=" masuk"
            android:textColor="@color/pink"
            android:textSize="12sp" />
    </LinearLayout>


</RelativeLayout>